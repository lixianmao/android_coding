<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.dalian.faceblog"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.dalian.faceblog.StartActivity"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="org.dalian.faceblog.PageInputActivity" >
        </activity>
        <activity
            android:name="org.dalian.faceblog.PageShowActivity"
            android:launchMode="singleTask" >
        </activity>
        <activity android:name="org.dalian.faceblog.LoginActivity" >
        </activity>
        <activity
            android:name="org.dalian.faceblog.MoreInformationActivity"
            android:label="@string/title_activity_more_information"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity android:name="org.dalian.faceblog.FocusActivity" >
        </activity>
        <activity android:name="org.dalian.faceblog.FansActivity" >
        </activity>
        <activity android:name="org.dalian.faceblog.WriteBlogActivity" >
        </activity>
        <activity android:name="org.dalian.faceblog.RegisterActivity" >
        </activity>
        <activity android:name="org.dalian.faceblog.MicroblogActivity" >
        </activity>
        <activity
            android:name="org.dalian.faceblog.MoreActivity"
            android:label="@string/title_activity_more"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
    </application>

</manifest>